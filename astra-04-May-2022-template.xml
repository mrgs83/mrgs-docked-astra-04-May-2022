<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
  <Name>Astra</Name>
  <Repository>mrgs83/mrgs-docked-astra-04-May-2022:latest</Repository>
  <Registry>https://hub.docker.com/r/mrgs83/mrgs-docked-astra-04-May-2022</Registry>
  <Network>bridge</Network>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/mrgs83/mrgs-docked-astra-04-May-2022/issues</Support>
  <Project>https://hub.docker.com/r/mrgs83/mrgs-docked-astra-04-May-2022</Project>
  <Overview>A Docker container for Astra-04-May-2022</Overview>
  <Category>Media:Video Applications:</Category>
  <WebUI>http://[IP]:[PORT:8000]/</WebUI>
  <Icon>https://raw.githubusercontent.com/mrgs83/logos/main/astra_sat.png</Icon>
  <Config Name="WebUI" Target="8000" Default="8000" Mode="tcp" Description="WebUI port" Type="Port" Display="always"/>
  <Config Name="License Path" Target="/etc/astra/license.txt" Default="/mnt/user/appdata/astra/license.txt" Mode="rw" Description="Path to license file."/>
  <Config Name="Config File" Target="/etc/astra/astra.conf" Default="/mnt/user/appdata/astra/astra.conf" Mode="rw" Description="Path to configuration file."/>
  <Config Name="/dev/dvb" Target="/dev/dvb" Default="/dev/dvb" Description="Only needed if you want to pass through a DVB card to the container. If you use SAT>IP vTuners or IPTV streams you can leave it out." Type="Device" Display="always" Required="false" Mask="false"/>
</Container>
